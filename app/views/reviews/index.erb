<div class="reviews_background">
<h1 style="padding-left: 15px">All Reviews</h1>

<ul>
<%@reviews.each do |review| %>
  <div class="review">
    <h4><%=link_to review.restaurant.name, review_path(review), class:'link-to-text-color' %></h4>
    <br>User Name: <%= review.user.first_name %>
    <br>Rating: <%= review.rating %>
    <br>Review: <%= review.content %>
  </div>
  <br></br>



<% end %>
</ul>
</div>

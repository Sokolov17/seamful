<div id="cart">
  <div class="flex-container">

<h1 style="margin: 50px 0 50px 0;font-family: 'Montserrat'; text-transform:uppercase; font-size: 45px"><b>Your Cart<b></h1>

</div>
<hr class="cart-line">
    <% @food_items.each do |item| %>
    <div class="flex-container">
      <p style="margin: 0 45% 0 0; font-family: 'Montserrat'; text-transform:uppercase; font-size: 24px;"><strong><%= item.food_name %></strong></p>
      <p class="price-right"style="margin: 0 20% 0 0; font-family: 'Montserrat'; text-transform:uppercase; font-size: 24px;">$<%= item.price %>

    </div>
    <hr class="cart-line">
    <% end %>

    <hr>

    <p style="color:#777">Total: </p><p style="margin: 0 0 30px 70px; font-family: 'Montserrat'; text-transform:uppercase; font-size: 24px;">$<%=@total %></p>
    <%= button_to "Submit Order", orders_path, class: "btn btn-info"%>

  </div>

</div>

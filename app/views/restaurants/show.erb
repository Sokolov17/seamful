        <p class="description"><em><%= item.description %></em><p>
          Quantity: <input type="number" name="items[<%= item.id %>]">
    </div>
    <% end %>
  <% end %>
  </div>
</div>
<br>
<%= submit_tag "Add to Cart", class: "btn btn-primary" %>
<% end %>
